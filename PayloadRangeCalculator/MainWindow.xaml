<Window x:Class="PayloadRangeCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="항공기 항속 거리 계산기" Height="500" Width="370">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="항속 거리 계산기 ✈️" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Orientation="Vertical" Margin="30">
            <TextBlock Text="OEW" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="OEWTextBox" Width="150" TextChanged="NumericTextBox_TextChanged"/>
                <ComboBox x:Name="OEWUnitComboBox" Width="60" Margin="10,0,0,0">
                    <ComboBoxItem Content="kg" IsSelected="True"/>
                    <ComboBoxItem Content="lb"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Payload" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="PayloadTextBox" Width="150" TextChanged="NumericTextBox_TextChanged"/>
                <ComboBox x:Name="PayloadUnitComboBox" Width="60" Margin="10,0,0,0">
                    <ComboBoxItem Content="kg" IsSelected="True"/>
                    <ComboBoxItem Content="lb"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Fuel" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FuelTextBox" Width="150" TextChanged="NumericTextBox_TextChanged"/>
                <ComboBox x:Name="FuelUnitComboBox" Width="60" Margin="10,0,0,0">
                    <ComboBoxItem Content="kg" IsSelected="True"/>
                    <ComboBoxItem Content="lb"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Velocity" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="VelocityTextBox" Width="150" TextChanged="NumericTextBox_TextChanged"/>
                <ComboBox x:Name="VelocityUnitComboBox" Width="80" Margin="10,0,0,0">
                    <ComboBoxItem Content="km/h" IsSelected="True"/>
                    <ComboBoxItem Content="knots"/>
                    <ComboBoxItem Content="mph"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="SFC (Specific Fuel Consumption)" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SFCTextBox" Width="150" TextChanged="NumericTextBox_TextChanged"/>
                <ComboBox x:Name="SFCUnitComboBox" Width="80" Margin="10,0,0,0">
                    <ComboBoxItem Content="kg/hr" IsSelected="True"/>
                    <ComboBoxItem Content="lb/hr"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="L/D (Lift-to-Drag Ratio)" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="LDTextBox" Width="150" TextChanged="NumericTextBox_TextChanged" Height="23"/>
                <!-- 빈 ComboBox 자리는 필요 없다면 생략 가능 -->
            </StackPanel>


            <Button Content="계산"
        Width="100"
        Margin="0,10,0,0"
        HorizontalAlignment="Center"
        Click="CalculateRange_Click"/>


            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Text="항속 거리: " />
                <TextBlock x:Name="RangeOutputText" FontWeight="Bold"/>
                <ComboBox x:Name="RangeUnitComboBox" Width="60" Margin="10,0,0,0">
                    <ComboBoxItem Content="km" IsSelected="True"/>
                    <ComboBoxItem Content="NM"/>
                    <ComboBoxItem Content="mi"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
